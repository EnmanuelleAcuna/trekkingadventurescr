@model EditDeleteTourViewModel

@{
    ViewBag.Title = "Tours";
}

<div class="container mt-5 pt-5">
    <div class="row">
        <div class="col-12">
            <div class="card shadow-sm">
                <div class="card-body">
                    <h4>Delete tour confirmation</h4>

                    @using (Html.BeginForm("delete", "tours", FormMethod.Post, new { autocomplete = "off" })) {
                        @Html.AntiForgeryToken()
						@Html.HiddenFor(model => model.id)

                        <div class="row">
                            <div class="col-md-12">
                                @Html.ValidationSummary(true, "", new { @class = "text-danger list-unstyled" })
                            </div>
                        </div>

                        <div class="row">
                            <div class="col-sm-12 col-md-10">
                                <div class="form-group">
                                    <span>Are you sure you want to delete </span>
                                    @Html.DisplayFor(model => model.nombre, "", new { @class = "form-control form-control-sm" })
                                    ?
                                </div>
                            </div>

                            <div class="col-12">
                                <div class="btn-group btn-group-sm" role="group"
											aria-label="Tour options">
                                            <input value="Delete" class="btn btn-sm btn-danger" type="submit" />
                                            @Html.ActionLink("Cancel", "Index", null, null, new { @class = "btn btn-sm btn-secondary" })
                                </div>                                
                            </div>
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts{
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}