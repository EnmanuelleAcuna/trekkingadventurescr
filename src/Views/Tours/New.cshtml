@model NewTourViewModel

@{
    ViewBag.Title = "Tours";
}

<div class="container mt-5 pt-5">
    <div class="row">
        <div class="col-12">
            <div class="card shadow-sm">
                <div class="card-body">
                    <h4 class="mb-4">Add a new tour</h4>

                    <form asp-controller="tours" asp-action="new" method="post" autocomplete = "off", enctype = "multipart/form-data">
                        @Html.AntiForgeryToken()

                        <div class="row">
                            <div class="col-md-12">
                                @Html.ValidationSummary(true, "", new { @class = "text-danger list-unstyled" })
                            </div>
                        </div>

                        <div class="row">
                            <div class="col-sm-12 col-md-7">
                                <div class="form-group">
                                    <label asp-for="nombre"></label>
                                    <input type="text" asp-for="nombre" class="form-control form-control-sm form-control-rounded" />
                                    <span asp-validation-for="nombre" class="text-danger"></span>
                                </div>
                            </div>

                            <div class="col-sm-12 col-md-2">
                                <div class="form-group">
                                    <label asp-for="precio"></label>
                                    <input type="text" asp-for="precio" class="form-control form-control-sm form-control-rounded" />
                                    <span asp-validation-for="precio" class="text-danger"></span>
                                </div>
                            </div>

                            <div class="col-sm-12 col-md-3">
                                <div class="form-group">
                                    <label asp-for="imagen"></label>
                                    <input asp-for="imagen" type="file" class="form-control-file"/>
                                    <span asp-validation-for="imagen" class="text-danger"></span>
                                </div>
                            </div>

                            <div class="col-sm-12">
                                <div class="form-group">
                                    <label asp-for="descripcionBreve"></label>
                                    <textarea asp-for="descripcionBreve" class="form-control form-control-sm form-control-rounded" rows="4"></textarea>
                                    <span asp-validation-for="descripcionBreve" class="text-danger"></span>
                                </div>
                            </div>
                            
                            <div class="col-sm-12">
                                <div class="form-group">
                                    <label asp-for="descripcionCompleta"></label>
                                    <textarea asp-for="descripcionCompleta" class="form-control form-control-sm form-control-rounded" rows="8"></textarea>
                                    <span asp-validation-for="descripcionCompleta" class="text-danger"></span>
                                </div>
                            </div>

                            <div class="col-sm-12 col-md-4">
                                <div class="form-group">
                                    <input asp-for="esTourDestacado" type="checkbox" class="check-box" />
                                    <label asp-for="esTourDestacado"></label>
                                </div>
                            </div>

                            <div class="col-12">
                                <div class="btn-group btn-group-sm" role="group" aria-label="Tour options">
                                    <input value="Save" class="btn btn-sm btn-primary" type="submit" />
                                    <a asp-action="Index" class="btn btn-sm btn-secondary">Cancel</a>
                                </div>
                            </div>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts{
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}