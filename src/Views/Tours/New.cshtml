@model NewTourViewModel

@{
    ViewBag.Title = "Tours";
}

<div class="container mt-5 pt-5">
    <div class="row">
        <div class="col-12">
            <div class="card shadow-sm">
                <div class="card-body">
                    <h4>Add a new tour</h4>

                    @using (Html.BeginForm("new", "tours", FormMethod.Post, new { autocomplete = "off" })) {
                        @Html.AntiForgeryToken()

                        <div class="row">
                            <div class="col-md-12">
                                @Html.ValidationSummary(true, "", new { @class = "text-danger list-unstyled" })
                            </div>
                        </div>

                        <div class="row">
                            <div class="col-sm-12 col-md-10">
                                <div class="form-group">
                                    @Html.LabelFor(model => model.nombre)
                                    @Html.TextBoxFor(model => model.nombre, "", new { @class = "form-control form-control-sm" })
                                    @Html.ValidationMessageFor(model => model.nombre, "", new { @class="text-danger" })
                                </div>
                            </div>

                            <div class="col-sm-12 col-md-2">
                                <div class="form-group">
                                    @Html.LabelFor(model => model.precio)
                                    @Html.TextBoxFor(model => model.precio, new { @class = "form-control form-control-sm" })
                                    @Html.ValidationMessageFor(model => model.precio, "", new { @class="text-danger"} )
                                </div>
                            </div>

                            <div class="col-sm-12">
                                <div class="form-group">
                                    @Html.LabelFor(model => model.descripcionBreve)
                                    @Html.TextAreaFor(model => model.descripcionBreve, new { @class = "form-control form-control-sm" })
                                    @Html.ValidationMessageFor(model => model.descripcionBreve, "", new { @class="text-danger"} )
                                </div>
                            </div>
                            
                            <div class="col-sm-12">
                                <div class="form-group">
                                    @Html.LabelFor(model => model.descripcionCompleta)
                                    @Html.TextAreaFor(model => model.descripcionCompleta, new { @class = "form-control form-control-sm" })
                                    @Html.ValidationMessageFor(model => model.descripcionCompleta, "", new { @class="text-danger"} )
                                </div>
                            </div>

                            <div class="col-sm-12 col-md-4">
                                <div class="form-group">
                                    @Html.LabelFor(model => model.esTourDestacado)
                                    <br />
                                    @Html.EditorFor(model => model.esTourDestacado, "", new { @class = "form-control" })
                                </div>
                            </div>

                            <div class="col-12">
                                <div class="btn-group btn-group-sm" role="group"
											aria-label="Tour options">
                                            <input value="Save" class="btn btn-sm btn-primary" type="submit" />
                                            @Html.ActionLink("Cancel", "Index", null, null, new { @class = "btn btn-sm btn-secondary" })
                                </div>                                
                            </div>
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts{
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}