@model LogInViewModel

@{
    ViewData["Title"] = "Log in";
}

<div class="container mt-5 pt-4">
    <div class="row">
        <div class="col-sm-12 col-md-4 offset-md-4">
            <div class="card">
                <div class="card-body">
                    <div class="d-block text-center">
                        <img src="~/images/web_optimized/logo_without_text_small.png" alt="Logo fitcare" class="img-fluid">
                    </div>
                    <h4 class="text-center mt-3 mb-3 text-dark">Welcome</h4>

                    @using (Html.BeginForm("LogIn", "Account", new { ReturnUrl = ViewBag.ReturnUrl }, FormMethod.Post, true, new { autocomplete = "off" })) {
                        @Html.AntiForgeryToken()

                        <div class="form-group">
                            @Html.LabelFor(m => m.username, new { @class = "font-bold" })
                            @Html.EditorFor(m => m.username, new { htmlAttributes = new { @class = "form-control form-control-sm form-control-rounded" } })
                            @Html.ValidationMessageFor(m => m.username, "", new { @class = "text-danger" })
                        </div>
                        
                        <div class="form-group">
                                @Html.LabelFor(m => m.password, new { @class = "font-bold" })
                            @Html.PasswordFor(m => m.password, new { @class = "form-control form-control-sm form-control-rounded" })
                            @Html.ValidationMessageFor(m => m.password, "", new { @class = "text-danger" })
                            </div>

                        <div class="center red-text font-bold">
                            @Html.ValidationSummary(true, "", new { @class = "data-error" })
                        </div>

                        <div class="w-100 text-center">
                            <button type="submit" value="Iniciar sesión" class="btn btn-sm btn-primary btn-block font-bold mb-2">
                                Log in
                            </button>
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>
</div>
